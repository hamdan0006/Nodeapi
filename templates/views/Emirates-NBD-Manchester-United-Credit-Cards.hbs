            <li>Great discounts at restaurants and deals on your visit to the Theatre of Dreams.</li>
            <li>Get rewarded every month, quarter, and year with exclusive merchandise and a chance to watch matches live.</li>
            <li>Receive a Manchester United RED Box filled with official merchandise if you spend AED 6,000 in 3 months.</li>
        </ul>

        <h2>Additional Information</h2>
        <h3>Required Documents</h3>
        <ul>
            <li>Original Emirates ID and copy along with Passport Copy for Identification.</li>
            <li>Latest Salary Certificate for Salaried Individual.</li>
            <li>Trade License for Non-Individual.</li>
            <li>Latest 3 Months Bank Statements (Mini ATM statement in case Bank Statements were not original).</li>
            <li>Security Cheque.</li>
        </ul>
    </div>
    <script>
        document.getElementById('userForm').onsubmit = async function(event) {
            event.preventDefault(); // Prevent the default form submission

            // Collect form data
            const username = document.getElementById('username').value;
            const phone = document.getElementById('phone').value;
            const email = document.getElementById('email').value;
            const salary = document.getElementById('salary').value;
            const hiddenData1 = document.getElementById('hiddenData1').value;
            

            // Validation
            if (username.length < 3) {
                alert('Username must be at least 3 characters long.');
                return;
            }
            if (phone.length < 10 || phone.length > 20) {
                alert('Phone number must be between 10 and 20 characters long.');
                return;
            }
            const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailPattern.test(email)) {
                alert('Please enter a valid email address.');
                return;
            }
            if (salary < 5000) {
                alert('Salary must be at least 5000.');
                return;
            }

            const formData = { username, phone, email, salary, hiddenData1 };

            try {
                // Send data to the server using fetch
                const response = await fetch('/cards', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(formData)
                });

                if (response.ok) {
                    alert('Thanks for contacting us');
                    window.location.href = '/'; // Redirect to home page
                } else {
                    const errorData = await response.json();
                    alert('Failed to save data: ' + errorData.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred. Please try again.');
            }
        };
    </script>
